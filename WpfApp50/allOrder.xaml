<Window x:Class="WpfApp50.allOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp50"
        mc:Ignorable="d"
        Title="allWindow" Height="1000" Width="1000" Activated="Window_Activated" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ordr_dtgrid"/>
        <DataGrid x:Name="price_dtgrid" Grid.Column="2"/>
        <DataGrid x:Name="expense_dtgrid" Grid.Column="4"/>
        <DataGrid x:Name="date_dtgrid" Grid.Column="5"/>
        <Label x:Name="ac_bc_lbl" Content="Account balance:" FontSize="20" FontWeight="ExtraBold" HorizontalAlignment="Left" Margin="148,849,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="250" Grid.Column="4"/>
    </Grid>
</Window>
